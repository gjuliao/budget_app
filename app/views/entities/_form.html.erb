<div>
<%= form_with(model: @entity, url: user_group_entities_path(user_id: current_user.id, group_id: params[:group_id])) do |form| %>
    <% if @entity.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@entity.errors.count, "error") %> prohibited this entity from being saved:</h2>
        <ul>
          <% @entity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class:"mx-auto w-100 m-2 p-2", placeholder: "Name" %>
    </div>
    <div>
      <%= form.label :amount, style: "display: block" %>
      <%= form.text_field :amount, class:"mx-auto w-100 m-2 p-2", placeholder: "Amount" %>
    </div>
    <div class="m-1">
      <%= form.label 'Category', class: "form-label text-muted" %>
      <%= form.collection_check_boxes :group_ids, Group.all, :id, :name, { checked: @entity.group_ids }, { required: true } do |cb| %>
        <%= cb.check_box %>
        <%= cb.label %>
      <% end %>
    </div>
    <div class="entity-submit">
      <%= form.submit class:"btn_submit_new" %>
    </div>
  <% end %>
</div>
