      <%= render 'partials/navbarentities'  %>
    <% end  %>

  <div class="entity_card_total px-4">
   <p> Total: </p>
    <p> <strong> <%= @entities_sum %> </strong>  </p>
 </div>


  <div id="entities">
    <% @entities.each do |entity| %>
