<h1>Entities</h1>

<div id="entities">
  <% @entities.each do |entity| %>
    <%= render entity %>
    <p>
      <%= link_to "Show this entity", user_group_entities_path(current_user, @group) %>
    </p>
  <% end %>
</div>

<%= link_to "New entity", new_user_group_entity_path(current_user, @group) %>
