<head>
  <%= stylesheet_link_tag 'categories' %>
</head>

<div class="categories" style="width:100%">
  <div><%= @total_amount %></div>
  <div id="groups">
    <% @groups.each do |group| %>
      <%= link_to(user_group_entities_path(current_user, group), class:"text-decoration-none text-reset") do %>
        <%= render group %>
      <% end %>
    <% end %>
  </div>


  <%= link_to "ADD CATEGORY", new_user_group_path(current_user), class:"mx-auto p-4 btn btn-primary w-100 text-light" %>
</div>

