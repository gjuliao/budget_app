<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="groups">
  <% @groups.each do |group| %>
    <%= render group %>
    <p>
      <%= link_to "Show this group", user_group_path(current_user, group) %>
    </p>
  <% end %>
</div>

<%= link_to "Add Category", new_user_group_path(current_user) %>
