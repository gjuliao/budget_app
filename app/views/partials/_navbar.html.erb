<head>
  <%= stylesheet_link_tag 'navbar' %>
</head>

<nav class="bg-primary">
  <div class="container-fluid">
     <div class="menu-toggle">
      <%= image_tag("list.svg", width:"10%")  %>
    </div>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav w-100 navigation">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= button_to 'Categories', groups_path(current_user), method: :get, class:"nav-link active" %>
          </li>
        <li class="nav-item px-4">
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class:"nav-link active" %>
        </li>
       <% else %>
       <li class="nav-item px-4">
          <%= button_to 'Sign in', new_user_session_path, method: :get, class:"nav-link active" %>
        </li>
       <% end %>
      </ul>
    </div>
  </div>
</nav>